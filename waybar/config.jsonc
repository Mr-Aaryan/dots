// -*- mode: jsonc -*-
{
  "layer": "top",
  "postion": "top",

  "modules-left": ["group/workspace", "tray"],
  "modules-center": ["group/windows"],
  "modules-right": ["group/info", "group/utils", "custom/power"],

  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 4
    }
  },
  "hyprland/window": {
    "format": "{}",
    "on-empty": "empty",
    "tooltip": false,
    "max-length": 20,
    "rewrite": {
      "(.*) — Mozilla Firefox": "Mozilla Firefox",
      "(.*) - Visual Studio Code": "Visual Studio Code"
    }
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },

  "tray": {
    "icon-size": 17,
    "spacing": 10
  },

  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  "cpu": {
    "format": "{usage}% ",
    "tooltip": false
  },

  "memory": {
    "format": "{}% "
  },

  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "", ""]
  },

  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% <span font='12'></span>",
    "tooltip": false
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    "format-icons": ["", "", "", "", ""]
  },
  "battery#bat2": {
    "bat": "BAT2"
  },

  "network": {
    "format-wifi": "󰤨",
    "format-ethernet": "{ipaddr}/{cidr} ",
    "tooltip-format": "{essid} ({signalStrength}%) \n{ifname} via {gwaddr} ",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "󰤨",
    "format-alt": false
  },
  "bluetooth": {
    "format": "<span font='10'></span>",
    "icon-size": 20,
    "format-disabled": "󰂲",
    "format-connected": "󰂱",
    "tooltip": false,
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
  },

  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon} ",
    "format-bluetooth-muted": "<span font='14'>󰝟 </span>",
    "format-muted": "<span font='14'>󰝟 </span>",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["  ", "  ", "  "]
    },
    "on-click": "pavucontrol"
  },

  "custom/arch": {
    "format": "<span font='12'>󰣇</span>",
    "tooltip": false,
    "icon-size": 20
  },
  "custom/power": {
    "on-click": "wlogout",
    "format": "<span font='12'>󰐥</span>",
    "tooltip": false,
    "icon-size": 20
  },
  "custom/notification": {
    "on-click": "swaync-client -t",
    "tooltip": false,
    "format": "<span font='10'></span>"
  },
  "custom/left": {
    "format": " ",
    "interval": "once",
    "tooltip": false
  },

  "custom/right": {
    "format": " ",
    "interval": "once",
    "tooltip": false
  },
  "custom/pipe": {
    "format": "|",
    "interval": "once",
    "tooltip": false
  },
  // "custom/cava": {
  //   "format": "{}",
  //   "exec": "~/.config/waybar/scripts/cava.sh",
  //   "return-type": "raw",
  //   "interval": 0,
  //   "exec-if": "playerctl -l 2>/dev/null | grep -q . && playerctl status | grep -q '^Playing$'"
  // },
  "group/windows": {
    "orientation": "horizontal",
    "modules": ["hyprland/window"]
  },
  "group/utils": {
    "orientation": "horizontal",
    "modules": ["network", "bluetooth", "custom/notification"]
  },
  "group/info": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "backlight", "battery", "clock"]
  },
  "group/workspace": {
    "orientation": "horizontal",
    "modules": ["custom/arch", "custom/pipe", "hyprland/workspaces"]
  }
}
